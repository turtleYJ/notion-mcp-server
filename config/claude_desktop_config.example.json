{
  "mcpServers": {
    "notion": {
      "command": "node",
      "args": ["/absolute/path/to/mcp-servers/notion-mcp/server.js"],
      "env": {
        "NOTION_TOKEN": "YOUR_NOTION_TOKEN_HERE"
      }
    },
    "playwright": {
      "command": "node",
      "args": ["/absolute/path/to/mcp-servers/playwright-mcp/server.js"]
    }
  }
}
